@model Level1CreateVM
@{
    ViewBag.PageTitle = "Create Level 1";
    ViewBag.PageLegend = "Create Level 1";
}

<div class="row">
    <div class="col-md-12">
        <!--breadcrumbs start -->
        <ul class="breadcrumb">
            <li><a asp-controller="Dashboard" asp-action="Index"><i class="fa fa-home mr-1"></i>Home</a></li>
            <li><a>Accounts</a></li>
            <li><a asp-controller="Level1" asp-action="Index"><i class="fa fa-user mr-1"></i>Level 1 List</a></li>
            <li class="active"><a>Create Level 1</a></li>
        </ul>
        <!--breadcrumbs end -->
    </div>
</div>



<form enctype="multipart/form-data" asp-controller="level1" asp-action="create"
      method="post" class="mt-3">
    <div class="row">
        <div class="col-lg-12">
            <label asp-for="Level1Desc" col-form-label"></label>
            <input asp-for="Level1Desc" class="form-control" placeholder="Name">
            <span asp-validation-for="Level1Desc" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <label asp-for="Photo" class="col-form-label"></label>
            <div class="custom-file">
                <input asp-for="Photo" class="form-control custom-file-input">
            </div>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="row">
        <div class="col-lg-4">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </div>

    @*This script is required to display the selected file in the file upload element*@

    @section Scripts {
        <script>
            $(document).ready(function () {
                $('.custom-file-input').on("change", function () {
                    var fileName = $(this).val().split("\\").pop();
                    $(this).next('.custom-file-label').html(fileName);
                });
            });
        </script>
    }
</form>