@model ChangePasswordVM

<head>
    <meta charset="utf-8">

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="ThemeBucket">
    <link rel="icon" href="images/logo.png">

    <title>Forgot Password</title>

    <!--Core CSS -->
    <link href="~/bs3/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/bootstrap-reset.css" rel="stylesheet">
    <!--DropDown-->
    <link rel="stylesheet" type="text/css" href="~/js/select2/select2.css" />
    <!--DropDown-->
    <link href="~/font-awesome/css/font-awesome.css" rel="stylesheet" />

    <!-- Custom styles for this template -->
    <link href="~/css/style.css" rel="stylesheet">
    <link href="~/css/style-responsive.css" rel="stylesheet" />

</head>
<body class="login-body">
    <div class="container">
        <form class="form-signin" id="login" method="post">
            <div class="row">
                <h2>Change Password</h2>
                <hr />
            </div>
            <div class="alert alert-danger" id="alertInvalid" style="display: none;">
                <div id="lblError" asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="login-wrap">
                <div class="user-login-info">
                    <label asp-for="CurrentPassword"></label>
                    <input asp-for="CurrentPassword" class="form-control" />
                    <span asp-validation-for="CurrentPassword" class="text-danger"></span>

                    <label asp-for="NewPassword"></label>
                    <input asp-for="NewPassword" class="form-control" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>

                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-lg btn-login btn-block">Update</button>
            </div>
        </form>
    </div>
</body>