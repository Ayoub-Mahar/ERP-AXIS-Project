@model EditUserVM

@{
    ViewBag.PageTitle = "Edit User";
    ViewBag.PageLegend = "Edit User";
}


    <div class="row">
        <div class="col-md-12">
            <!--breadcrumbs start -->
            <ul class="breadcrumb">
                <li><a asp-controller="Dashboard" asp-action="Index"></i>Home</a></li>
                <li><a>Administration</a></li>
                <li><a asp-controller="Administration" asp-action="ListUser"></i>User List</a></li>
                <li class="active"><a>Edit User</a></li>
            </ul>
            <!--breadcrumbs end -->
        </div>
    </div>

    <form method="post">
        <div class="row hidden">
            <div class="col-lg-12">
                <label asp-for="Id"></label>
                <input asp-for="Id" disabled class="form-control">
            </div>
        </div>


        <div class="row">
            <div class="col-lg-12">
                <label asp-for="UserName"></label>
                <input asp-for="UserName" class="form-control">
                <span asp-validation-for="UserName" class="text-danger"></span>

            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <label asp-for="City"></label>
                <input asp-for="City" class="form-control">

            </div>
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="row">
            <div class="col-lg-1">
                <button type="submit" class="btn btn-primary">Update</button>
            </div>
            <div class="col-lg-1">
                <a asp-action="ListUsers" class="btn btn-primary">Cancel</a>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-header alt">
                        <h3>User Roles</h3>
                    </div>
                    <div class="card-body">
                        @if (Model.Roles.Any())
                        {
                            foreach (var role in Model.Roles)
                            {
                                <h5 class="card-title">@role</h5>
                            }
                        }
                        else
                        {
                            <h5 class="card-title">None at the moment</h5>
                        }
                    </div>
                    <div class="card-footer">
                        <a asp-action="ManageUserRoles" asp-route-userid="@Model.Id" style="width:auto" class="btn btn-primary">
                            Manage Roles
                        </a>
                    </div>
                </div>

                <div class="card mt-3">
                    <div class="card-header">
                        <h3>User Claims</h3>
                    </div>
                    <div class="card-body">
                        @if (Model.Claims.Any())
                        {
                            foreach (var claim in Model.Claims)
                            {
                                <h5 class="card-title">@claim</h5>
                            }
                        }
                        else
                        {
                            <h5 class="card-title">None at the moment</h5>
                        }
                    </div>
                    <div class="card-footer">
                        <a asp-action="ManageUserClaims" asp-route-userId="@Model.Id" style="width:auto" class="btn btn-primary">
                            Manage Claims
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </form>