@model RegisterUserVM

@{
    ViewBag.PageTitle = "User Registration";
    ViewBag.PageLegend = "User Registration";
}

<h1>User Registration</h1>

<div class="row">
    <div class="col-md-12">
        <ul class="breadcrumb">
            <li><a asp-controller="Dashboard" asp-action="Index"><i class="fa fa-home mr-1"></i>Home</a></li>
            <li><a><i class="fa fa-user mr-1"></i> Administration</a></li>
            <li><a class="active">Create User</a></li>
        </ul>
    </div>
</div>
<form method="post">
    <div class="row">
        <div class="col-lg-12">
            <div asp-validation-summary="All" class="text-danger"></div>
            </div>
        </div>
    <div class="row">
        <div class="col-lg-12">
            <label asp-for="UserName"></label>
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <label asp-for="ConfirmPassword"></label>
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <label asp-for="City"></label>
            <input asp-for="City" class="form-control" />

        </div>
    </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <button type="submit" class="btn btn-primary">Register</button>
                            </div>
                        </div>
        
</form>