@model BranchCreateEditVM

@{
    ViewBag.Title = "Edit Branch";
    ViewBag.PageLegend = "Edit Branch";
}

<div class="row">
    <div class="col-md-12">
        <!--breadcrumbs start -->
        <ul class="breadcrumb">
            <li><a asp-controller="Dashboard" asp-action="Index"><i class="fa fa-home mr-1"></i>Home</a></li>
            <li><a>Administration</a></li>
            <li><a asp-controller="Administration" asp-action="ListBranch"><i class="fa fa-user mr-1"></i>Branch List</a></li>
            <li class="active"><a>Edit Branch</a></li>
        </ul>
        <!--breadcrumbs end -->
    </div>
</div>

<h1>Edit Branch</h1>

<form method="post" class="mt-3">
    <div class="row">
        <div class="col-lg-12">
            <label asp-for="id" class="col-sm-2 col-form-label"></label>
            <input asp-for="id" disabled class="form-control">
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6">
            <label asp-for="BranchName" class="col-sm-4 col-form-label"></label>
            <input asp-for="BranchName" class="form-control">
            <span asp-validation-for="BranchName" class="text-danger"></span>
        </div>
        
    </div>
    <div class="row">
        <div class="col-lg-6">
            <div asp-validation-summary="All" class="text-danger"></div>
            <label asp-for="Company"></label>
            <select asp-for="Company" class="e2" asp-items="@(new SelectList(@ViewBag.CompanyList,"id","CompanyName"))">
                <option value="">Please select Company</option>
            </select>

            <span asp-validation-for="Location" class="text-danger"></span>
        </div>
        <div class="col-lg-6">
            <div asp-validation-summary="All" class="text-danger"></div>
            <label asp-for="Location"></label>
            <select asp-for="Location" class="e2" asp-items="@(new SelectList(@ViewBag.LocationList,"id","LocationName"))">
                <option value="">Please select Location</option>
            </select>
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="row">
        <div class="col-lg-12">
            <div class="col-lg-1">

                <button type="submit" asp-route-id="@Model.id"
                        asp-action="EditBranch" asp-controller="Administration" class="btn btn-primary">
                    Update
                </button>

            </div>
            <div class="col-lg-1">
                <button asp-action="DeleteBranch" asp-controller="Administration" asp-route-id="@Model.id" class="btn btn-danger" type="submit">Delete</button>

            </div>
            <div class="col-lg-1">
                <a asp-action="ListBranch" asp-controller="Administration" class="btn btn-primary">Cancel</a>
            </div>
        </div>
    </div>
</form>
