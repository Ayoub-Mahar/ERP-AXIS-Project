@model BranchCreateEditVM

@{
    ViewBag.Title = "Create New Branch";
    ViewBag.PageLegend = "Create New Branch";
}


<div class="row">
    <div class="col-md-12">
        <!--breadcrumbs start -->
        <ul class="breadcrumb">
            <li><a asp-controller="Dashboard" asp-action="Index"><i class="fa fa-home mr-1"></i> Home</a></li>
            <li><a>Administration</a></li>
            <li><a asp-controller="Administration" asp-action="ListBranch"><i class="fa fa-user mr-1"></i> Branch List</a></li>
            <li class="active"><a>Create Branch</a></li>
        </ul>
        <!--breadcrumbs end -->
    </div>
</div>
<form method="post">
    <div class="row">
        <div class="col-lg-12">
            <div asp-validation-summary="All" class="text-danger"></div>
            <label asp-for="BranchName"></label>
            <input asp-for="BranchName" class="form-control" />
            <span asp-validation-for="BranchName" class="text-danger"></span>
        </div>
        </div>
    <div class="row">
        <div class="col-lg-6">
            <div asp-validation-summary="All" class="text-danger"></div>
            <label asp-for="Company"></label>
            <select asp-for="Company" class="e2" asp-items="@(new SelectList(@ViewBag.CompanyList,"id","CompanyName"))">
                <option value="">Please select Company</option>
            </select>

            <span asp-validation-for="Location" class="text-danger"></span>
        </div>
        <div class="col-lg-6">
            <div asp-validation-summary="All" class="text-danger"></div>
            <label asp-for="Location"></label>
            <select asp-for="Location" class="e2" asp-items="@(new SelectList(@ViewBag.LocationList,"id","LocationName"))">
                <option value="">Please select Location</option>
            </select>
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>
    </div>
            <div class="row">
                <div class="col-lg-12">
                    <button style="width:auto" type="submit" class="btn btn-primary">Save Location</button>
                </div>
            </div>
</form>