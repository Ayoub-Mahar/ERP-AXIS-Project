@model UserClaimsVM
    <form method="post">
        <div class="row">
            <div class="col-lg-12">


                <div class="card">
                    <div class="card-header">
                        <h2>Manage User Claims</h2>
                    </div>
                    <div class="card-body">
                        @for (int i = 0; i < Model.UClaims .Count; i++)
                        {
                            <div class="form-check m-1">
                                <input type="hidden" asp-for="@Model.UClaims[i].ClaimType" />
                                <input asp-for="@Model.UClaims[i].IsSelected" class="form-check-input" />
                                <label class="form-check-label" asp-for="@Model.UClaims[i].IsSelected">
                                    @Model.UClaims[i].ClaimType
                                </label>
                            </div>
                        }
                        <div asp-validation-summary="All" class="text-danger"></div>
                    </div>
                    <div class="card-footer">
                        <input type="submit" value="Update" class="btn btn-primary"
                               style="width:auto" />
                        <a asp-action="EditUser" asp-route-id="@Model.UserId"
                           class="btn btn-primary" style="width:auto">Cancel</a>
                    </div>
                </div>
            </div>
        </div>
    </form>