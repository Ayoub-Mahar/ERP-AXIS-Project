@model LocationCreateEditVM

@{
    ViewBag.Title = "Create New Location";
    ViewBag.PageLegend = "Create New Location";
}


<div class="row">
    <div class="col-md-12">
        <!--breadcrumbs start -->
        <ul class="breadcrumb">
            <li><a asp-controller="Dashboard" asp-action="Index"><i class="fa fa-home mr-1"></i> Home</a></li>
            <li><a>Administration</a></li>
            <li><a asp-controller="Administration" asp-action="ListLocation"><i class="fa fa-user mr-1"></i> Location List</a></li>
            <li class="active"><a>Create Location</a></li>
        </ul>
        <!--breadcrumbs end -->
    </div>
</div>
<form method="post">
    <div class="row">
        <div class="col-lg-12">
            <div asp-validation-summary="All" class="text-danger"></div>
            <label asp-for="LocationName"></label>
            <input asp-for="LocationName" class="form-control" />
            <span asp-validation-for="LocationName" class="text-danger"></span>
        </div>
        <div class="col-lg-12">
            <div asp-validation-summary="All" class="text-danger"></div>
            <label asp-for="Region"></label>
            <select asp-for="Region" class="e2" asp-items="Html.GetEnumSelectList<Region>()">
                <option value="">Please select region</option> 
                </select>
            
            <span asp-validation-for="Region" class="text-danger"></span>
        </div>
    </div>
            <div class="row">
                <div class="col-lg-12">
                    <button style="width:auto" type="submit" class="btn btn-primary">Save Location</button>
                </div>
            </div>
</form>